
%h1
  = image_tag 'twitter-bird-light-bgs.png', :width => 80
  Twitter News Reader
%p Last news of your interest

= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter) unless current_user.present?

- if current_user.present?
  #newsfeeds
    = image_tag 'ajax-loader-large.gif', :width => 170

  :javascript
    $(function(){
       $.ajax({
          url: '#{newsfeed_path}',
          cache: false,
          type: 'GET'
      });
    });

    var map;
    function initialize() {
      var mapOptions = {
        zoom: 8,
        center: new google.maps.LatLng(-34.397, 150.644),
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };
      map = new google.maps.Map(document.getElementById('map-canvas'),
          mapOptions);
    }

    google.maps.event.addDomListener(window, 'load', initialize);